{% extends "layout.html.twig" %}
{% block title %}
New Reservation
{% endblock %}
{% block res_body %}
<div class="content-body">
            <div class="container-fluid">
                <div class="row page-titles mx-0">
                    <div class="col-sm-6 p-md-0">
                        <div class="welcome-text">
                            <h4>Hi, welcome back!</h4>
                            <p class="mb-0"></p>
                        </div>
                    </div>
                    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0)">Reservation</a></li>
                            <li class="breadcrumb-item active"><a href="javascript:void(0)">List</a></li>
                        </ol>
                    </div>
                </div>
    <h1>Reservation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Heure</th>
                <th>Nb_customer</th>
                <th>Nom_client</th>
                <th>Phone_client</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.date }}</td>
                <td>{{ reservation.heure }}</td>
                <td>{{ reservation.nbCustomer }}</td>
                <td>{{ reservation.nomClient }}</td>
                <td>{{ reservation.phoneClient }}</td>
                <td>
                    <a href="{{ path('reservation_show', {'id': reservation.id}) }}">show</a>
                    <a href="{{ path('reservation_edit', {'id': reservation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
    </table>
  <ul class="header-dropdown">
                <li><a href="{{ path('reservation_new') }}" class="btn btn-info" role="button">Ajouter</a></li>
              </ul>
    
    </div>
    </div>
{% endblock %}
